<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed 按下时 -->
    <item android:state_pressed="true"><color android:color="#E0E0E0" /></item>
    
    <!-- focused 获得焦点时 -->
    <item android:state_focused="true"><color android:color="#E0E0E0" /></item>
    
    <!-- default 默认-->
    <item android:drawable="@android:color/white"/>

</selector>