<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dlbj" >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/title_03" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/guangg_03" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="140dp"
        android:src="@drawable/whbj_03" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="125dp" >

        <TextView
            style="@style/home_menu_text"
            android:text="外 检" />

        <Button
            android:id="@+id/ll_wj"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/wj" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/ll_r"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/xsck" />

        <TextView
            style="@style/home_menu_text"
            android:text="销售出库" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="180dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/ll_rsss"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/wgrk" />

        <TextView
            style="@style/home_menu_text"
            android:text="外购入库" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="310dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/ll_scrk"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/scrk" />

        <TextView
            style="@style/home_menu_text"
            android:text="生产入库" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="360dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/ll_gcjy"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/gcjy" />

        <TextView
            style="@style/home_menu_text"
            android:text="过程检验" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="310dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/ll_llck"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/llck" />

        <TextView
            style="@style/home_menu_text"
            android:text="领料出库" />
    </LinearLayout>

</FrameLayout>